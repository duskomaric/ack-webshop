    </div>
</section>
<style>
    @property --num {
        syntax: '<integer>';
        initial-value: 0;
        inherits: false;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/@alpinejs/intersect@3.x.x/dist/cdn.min.js"></script>
<script>
    const rotatingText = document.getElementById('rotating-text-dostignuca');
    const textOptions = ['VRIJEME', 'NOVAC']; // Add more options as needed
    let currentIndex = 0;

    function rotateText() {
        rotatingText.textContent = textOptions[currentIndex];
        currentIndex = (currentIndex + 1) % textOptions.length;
    }

    setInterval(rotateText, 3000); // Change text every 3 seconds (adjust as needed)


</script>